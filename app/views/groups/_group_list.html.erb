<div class="group-list">
  <% if @my_groups.present? %>
    <ul class="group-list-table">
      <% @my_groups.each do |group| %>
        <li class="group-list-table-each-group">
          <%= link_to group.name, group_path(group) %>

          <div class="group-list-actions">
            <%= link_to '編集', edit_group_path(group) %>
            <%= link_to '招待', invitation_link_group_path(group),
                        class: "btn btn-info btn-sm" %>
          </div>
        </li>
      <% end %>
    </ul>
  <% else %>
    <p class="dropdown-empty">
      所属グループがありません
    </p>
  <% end %>
</div>

<div class="group-new">
  <%= link_to 'グループ作成', new_group_path, class: "group-new-link" %>
</div>