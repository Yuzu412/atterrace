<div class="group-edit-form">
<%= form_with(model: @group, local: true) do |f| %>
  <div class="group-new-form">
    <div class="group-new-form-name">
      <%= f.label :name, 'グループ名' %>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <%= f.submit '更新', class: "btn btn-primary" %>
  </div>
<% end %>
</div>