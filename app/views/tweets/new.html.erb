<div class="new-tweet">
  <h3>新規投稿</h3>

<%= form_with(model: [@group, @tweet], local: true, html: { id: 'upload-form' }) do |f| %>

    <!-- ★ エラーメッセージを表示する場所（ここに追加！） -->
  <% if @tweet.errors.any? %>
    <div class="error-messages">
      <ul>
        <% @tweet.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
  <% end %>
  <!-- ★ ここまで -->


  <div class="field">
    <%= f.label :キャプション %>
    <%= f.text_field :body, size: 140 %>
  </div>

  <!-- ★ 画像アップロード（複数対応） -->
  <div class="field">
    <%= f.file_field :images, multiple: true, direct_upload: true,
          id: 'file-upload-input', style: 'display: none;' %>

    <%= f.label :images, "写真を追加",
          class: "add-photo-button",
          for: 'file-upload-input' %>
    <!-- ★ 追加 -->
  <p id="selected-files" class="file-status"></p>
</div>

  <%= f.submit "投稿する" %>
<% end %>

<%= link_to "一覧に戻る", group_path(@group) %>

<script>
  document.addEventListener("turbo:load", () => {
    const input = document.getElementById("file-upload-input");
    const status = document.getElementById("selected-files");

    if (!input || !status) return;

    input.addEventListener("change", () => {
      if (input.files.length === 0) {
        status.textContent = "";
      } else if (input.files.length === 1) {
        status.textContent = "写真を1枚選択しました";
      } else {
        status.textContent = `写真を${input.files.length}枚選択しました`;
      }
    });
  });
</script>
</div>